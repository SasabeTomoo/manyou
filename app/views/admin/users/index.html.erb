<h1>管理画面のユーザー一覧画面</h1>
<table>
  <tr>
    <th>id</th>
    <th>名前</th>
    <th>email</th>
    <th>タスク数</th>
    <th colspan="3"></th>
  </tr>

 <% @users.each do |user| %>
 <tr>
   <td class="users"><%= user.id %></td>
   <td class="users"><%= user.name %></td>
   <td class="users"><%= user.email %></td>
   <td class="users"><%= Task.where(user_id:user).size %></td>
   <td><%= link_to '（暫定）詳細を確認する', user_path(user.id) %> </td>
   <td><%= link_to "（暫定）編集する", edit_user_path(user.id) %></td>
   <td><%= link_to '（暫定）削除する', user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？'} %></td>

 </tr>
<% end %>
