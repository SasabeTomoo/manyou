<!-- <h1>tasks#_for</h1> -->
<%= form_with(model: @task, local: true ) do |form| %>
  <% if @task.errors.any? %>
    <div>
      <h2><%= @task.errors.count %>件のエラーがあります</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="content">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :content %>
    <%= form.text_field :content %>
    <%= form.label :expired_at %>
    <%= form.date_select :expired_at %>
    <%= form.label :status, 'ステータス' %>
    <%= form.select :status, {'未着手': '未着手', '着手中': '着手中', '完了': '完了'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to '一覧画面に戻る', tasks_path %>
